<% content_for :page_title, @category[:title] %>
<div class="grid grid-cols-2 gap-4">
  <% @items.each do |item| %>
    <button class="bg-card-light dark:bg-card-dark rounded-xl p-6 flex flex-col items-center justify-center text-center shadow-soft hover:shadow-md transition-shadow active:scale-95 duration-200 aspect-square group">
      <span class="material-icons-round text-5xl mb-3 text-orange-500 group-hover:scale-110 transition-transform">
        <%= item[:icon] %>
      </span>

      <span class="text-2xl font-bold text-text-main-light dark:text-text-main-dark mb-1">
        <%= item[:name] %>
      </span>

      <span class="text-sm text-text-sub-light dark:text-text-sub-dark">
        <%= item[:kana] %>
      </span>
    </button>
  <% end %>
</div>

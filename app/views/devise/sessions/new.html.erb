<main class="relative flex min-h-screen w-full flex-col bg-stone-200 overflow-x-hidden">

<!-- Main -->
  <div class="flex flex-col justify-center items-center flex-1 px-4 w-full max-w-md mx-auto pt-12 pb-16">

    <!-- Title -->
    <section class="w-full text-center mb-10">
      <h2 class="text-2xl font-bold tracking-tight text-stone-800 mb-1">
        ログイン
      </h2>
      <p class="text-sm text-stone-600">
        おかえりなさい
      </p>
    </section>

    <!-- Google Login -->
    <section class="w-full mb-8">
      <%= button_to user_google_oauth2_omniauth_authorize_path,
          data: { turbo: false },
          class: "
            flex w-full items-center justify-center gap-3
            rounded-full border border-stone-300
            bg-white px-6 py-4
            text-stone-800 font-bold
            shadow-sm
            hover:bg-stone-100
            active:scale-[0.98]
            transition
          " do %>
        <img
          src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
          alt="Google"
          class="h-6 w-6"
        >
        Googleでログイン
      <% end %>
    </section>

    <!-- Divider -->
    <div class="relative w-full flex items-center mb-8">
      <div class="flex-grow border-t border-stone-300"></div>
      <span class="mx-4 text-sm text-stone-500">または</span>
      <div class="flex-grow border-t border-stone-300"></div>
    </div>

    <!-- Email Login -->
    <section class="w-full">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="space-y-6">

          <!-- Email -->
          <div>
            <%= f.label :email, "メールアドレス",
                class: "block text-sm font-bold text-stone-700 mb-1" %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "
                  w-full rounded-xl border-stone-300
                  bg-white px-5 py-4
                  text-stone-800
                  focus:border-amber-600
                  focus:ring-2 focus:ring-amber-200
                  transition
                " %>
          </div>

          <!-- Password -->
          <div>
            <%= f.label :password, "パスワード",
                class: "block text-sm font-bold text-stone-700 mb-1" %>
            <%= f.password_field :password,
                autocomplete: "current-password",
                class: "
                  w-full rounded-xl border-stone-300
                  bg-white px-5 py-4
                  text-stone-800
                  focus:border-amber-600
                  focus:ring-2 focus:ring-amber-200
                  transition
                " %>
          </div>

          <!-- Remember me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2 text-sm text-stone-600">
              <%= f.check_box :remember_me,
                  class: "rounded border-stone-300 text-amber-600 focus:ring-amber-500" %>
              <%= f.label :remember_me, "ログインしたままにする" %>
            </div>
          <% end %>

          <!-- Submit -->
          <div class="pt-4">
            <%= f.submit "ログイン",
                class: "
                  w-full h-14
                  rounded-full
                  bg-amber-600
                  text-white text-lg font-bold
                  shadow
                  hover:bg-amber-700
                  active:scale-[0.98]
                  transition
                " %>
          </div>

        </div>
      <% end %>
    </section>

    <!-- Links -->
    <section class="w-full text-center mt-8 space-y-4">
      <div class="text-sm">
        <%= link_to "パスワードを忘れた方はこちら",
            new_password_path(resource_name),
            class: "text-stone-600 hover:text-amber-700 font-medium" %>
      </div>

      <div class="pt-4 border-t border-stone-300">
        <p class="text-sm text-stone-600 mb-2">
          アカウントをお持ちでない方
        </p>
        <%= link_to "新規登録はこちら",
            new_registration_path(resource_name),
            class: "
              inline-flex items-center justify-center
              w-full h-12
              rounded-full
              bg-white
              border border-stone-300
              text-stone-700 font-bold
              hover:bg-stone-100
              transition
            " %>
      </div>
    </section>

  </div>

</main>
